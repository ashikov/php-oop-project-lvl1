{
  "name": "hexlet/code",
  "type": "library",
  "authors": [
    {
      "name": "Roman Ashikov",
      "email": "rmn.shkv@gmail.com"
    }
  ],
  "description": "Simple validator",
  "license": "MIT",
  "scripts": {
    "test": "phpunit tests"
